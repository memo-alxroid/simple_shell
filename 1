#include "main.h"

int main(int argc, char *argv[], char *env[])
{
	char *inputString;
	size_t inputStringLength = 0;
	char *inputArrayString;
	
	if (argc > 1)
	{
		dprintf(2, "Error in Number of arguments \n");
	}
	while (2)
	{
		printf("#cisfun$ ");
		if (!getline(&inputString, &inputStringLength, stdin))
		{
			dprintf(2, "%s: No such file or directory\n", argv[0]);
		}
		else if (inputString[0] == '^' && inputString[1] == 'C')
		{
			return (0);
		}
		else
		{
			inputArrayString = strtok(inputString, " ");
			if (inputArrayString == NULL)
			{
				dprintf(2, "Error in strtok returned string");
				return (1);
			}
			if (!execve(inputString, argv[], env[]))
			{
				dprintf(2, "%s: No such file or directory", argv[0]);
				continue;
			}
		}
	}
	return (0);
}
